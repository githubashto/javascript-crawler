<VirtualHost *:80>
    ServerName blog.zuiyidong.com    
    ServerAdmin zuiyidong@gmail.com    
    DocumentRoot /vol/wordpress/zydblog
    <Directory  /vol/wordpress/zydblog>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>
    ErrorLog /var/log/apache2/error.log
    LogLevel warn
    CustomLog /var/log/apache2/access.log combined
</VirtualHost>