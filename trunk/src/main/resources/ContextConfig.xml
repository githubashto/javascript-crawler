<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="placeholderConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="false" />
		<property name="location" value="classpath:Env.properties" />
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		autowire="byName" destroy-method="close">
		<property name="driverClassName" value="${dataSource.driverClassName}" />
		<property name="url" value="${dataSource.url}" />
		<property name="username" value="${dataSource.username}" />
		<property name="password" value="${dataSource.password}" />
		<property name="testWhileIdle" value="true" />
		<property name="validationQuery" value="select now()" />
	</bean>

	<bean id="contextBean" class="com.zyd.core.util.SpringContext">
	</bean>

	<bean id="bookDao" class="com.zyd.core.dao.BookDao">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="siteDao" class="com.zyd.core.dao.SiteDao">
		<property name="dataSource" ref="dataSource" />
		<property name="bookDao" ref="bookDao" />
	</bean>
	<bean id="jsonMapper" class="com.zyd.core.busi.JsonMapper">
	</bean>
	<bean id="objectManager" class="com.zyd.core.objecthandler.ObjectManager">
	</bean>

	<bean id="bookManager" class="com.zyd.core.busi.BookManager">
		<property name="bookDao" ref="bookDao" />
		<property name="siteDao" ref="siteDao" />
	</bean>

	<bean id="siteManager" class="com.zyd.core.busi.SiteManager">
		<property name="siteDao" ref="siteDao" />
	</bean>

	<bean id="linkManager" class="com.zyd.core.busi.LinkManager">
	</bean>
	<bean id="templateManager" class="com.zyd.core.busi.TemplateManager">
	</bean>

	<bean id="crawlerManager" class="com.zyd.core.busi.CrawlerManager">
		<property name="bookManager" ref="bookManager" />
		<property name="jsonMapper" ref="jsonMapper" />
		<property name="siteManager" ref="siteManager" />
		<property name="linkManager" ref="linkManager" />
		<property name="objectManager" ref="objectManager" />
	</bean>

</beans>
    